# ============================================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO
# ============================================================
# IMPORTANTE: Este es un archivo de ejemplo. 
# Copia este archivo a .env y configura los valores reales.
# NO subas el archivo .env al repositorio.

# ============================================================
# KONG API GATEWAY
# ============================================================
KONG_DB_USER=kong
KONG_DB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
KONG_DB_NAME=kong

# ============================================================
# KEYCLOAK (AUTENTICACIÓN)
# ============================================================
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
KEYCLOAK_DB_NAME=keycloak
KC_BOOTSTRAP_ADMIN_USERNAME=admin
KC_BOOTSTRAP_ADMIN_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# ============================================================
# PORTAL WEB
# ============================================================
SESSION_SECRET=CHANGE_ME_TO_RANDOM_SECRET_MIN_32_CHARS
KEYCLOAK_URL_PUBLIC=http://localhost:8080
KEYCLOAK_URL_INTERNAL=http://keycloak:8080
KEYCLOAK_REALM=portal
KEYCLOAK_CLIENT_ID=portal-client
KEYCLOAK_CLIENT_SECRET=CHANGE_ME_TO_CLIENT_SECRET
REDIRECT_URI=http://localhost:8000/portal/callback
BASE_PATH=/portal

# ============================================================
# POSTGRESQL (BASE DE DATOS PRINCIPAL)
# ============================================================
POSTGRES_USER=admin
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_DB=maindb

# ============================================================
# REDIS (CACHE)
# ============================================================
REDIS_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# ============================================================
# RABBITMQ (MESSAGE BROKER)
# ============================================================
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# ============================================================
# MINIO (OBJECT STORAGE)
# ============================================================
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# ============================================================
# VAULT (SECRETS MANAGEMENT)
# ============================================================
VAULT_ROOT_TOKEN=CHANGE_ME_TO_SECURE_TOKEN

# ============================================================
# PGADMIN (ADMINISTRACIÓN DE POSTGRESQL)
# ============================================================
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
